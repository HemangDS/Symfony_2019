{% extends '::base.html.twig' %}

{% block banner %}
	{% if slider_image %}
		<div {% if slider_image|length > 1 %} id="owl-banner" class="owl-carousel" {% endif %}>
			{% for image in slider_image %}
				<div class="slide-img">
					{% if image.url %} <a href="{{ image.url }}" title="{{ image.title }}"> {% endif %}
					<img src="{{ image.image }}" alt="{{ image.title }}" title="{{ image.title }}">
					{% if image.url %} </a> {% endif %}
				</div>
			{% endfor %}
		</div>
	{% endif %}
{% endblock %}

{% block customer_review %}
	{% if review %}
		<div class="christmas-special-main customer-review">
			<div class="chris-text">
				<span>OUR CUSTOMER REVIEWS</span>
			</div>
			<div class="customer-review-slide">
				<div id="owl-review" class="owl-carousel">
				{% for review_data in review %}
					<div class="customer-review-block">
						<div class="customer-review-info">
							<h5>{{ review_data.username }} </h5>
							<span>
								{% set rating = review_data.rating  %}
								{% if rating == 1 %}
									<img src="{{absolute_url(asset('/bundles/iflairletsbonusfront/images/rating-1.png'))}}" alt="">
								{% endif %}
								{% if rating == 2 %}
									<img src="{{absolute_url(asset('/bundles/iflairletsbonusfront/images/rating-2.png'))}}" alt="">
								{% endif %}
								{% if rating == 3 %}
									<img src="{{absolute_url(asset('/bundles/iflairletsbonusfront/images/rating-3.png'))}}" alt="">
								{% endif %}
								{% if rating == 4 %}
									<img src="{{absolute_url(asset('/bundles/iflairletsbonusfront/images/rating-4.png'))}}" alt="">
								{% endif %}
								{% if rating == 5 %}
									<img src="{{absolute_url(asset('/bundles/iflairletsbonusfront/images/rating-5.png'))}}" alt="">
								{% endif %}
							</span>
							<span>{{ review_data.created|date("m/d/Y") }}</span>
						</div>
						<div class="customer-review-btm">
							<p>{{ review_data.review }}</p>
						</div>
					</div>
				{% endfor %}
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}