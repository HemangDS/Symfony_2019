{% extends 'SonataAdminBundle:CRUD:base_edit.html.twig' %}

{% block javascripts %}
{{ parent() }}
	{% javascripts
		'@iFlairLetsBonusAdminBundle/Resources/public/js/custom.js'
	%}
    	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
<script type="text/javascript">
	$(document).ready(function(){
	
	
		var URL = "{{ admin.generateUrl('loadParentCategory') }}";
		var shopArr = '';
		var obj = '';
		var shopId	= '{{ app.request.get('id') }}';
		var datashopId = '{{ shopId|json_encode|raw }}';
		
			if(shopId != '')
			{
				var shopArr = datashopId;
				obj = JSON.parse(shopArr);
				obj = JSON.stringify(obj);
				var str = obj.replace(/\[|\]/g, "");
				var obj = str.split(",");
				
				
			}

		admin.cashbackSettings(URL,obj);
	});
</script>
{% endblock %}

